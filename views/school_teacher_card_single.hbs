<section>
    {{#if error}}
        <div class="alert alert-danger alert_notification" role="alert">
            {{error}}
        </div>
    {{/if}}

    {{#if notice}}
        <div class="alert alert-primary alert_notification" role="alert"  >
            {{notice}}
        </div>
    {{/if}}
</section>
<header>
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class=" col-md-6 col-sm-12">
                <div class="logo">
                    <a href="/" class="logo__tallam">Tallam</a>
                    <div>
                        <h2 class="header__institution" id="header__institution">{{school_name}}</h2>
                    </div>
                </div>
            </div>
            <div class=" col-md-6 col-sm-12 ">
                <nav class="navbar navbar-expand-md navbar-light">
                    <div class="container-fluid pt-2">
                        <button class="navbar-toggler mx-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon "></span>
                        </button>
                        <div class="collapse navbar-collapse   flex-row-reverse  " id="navbarNavDropdown">
                            <ul class="navbar-nav" >
                                <li class="nav-item">
                                    <a class="nav-link"  href="/school/support">Помощь</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/auth/logout">Выйти</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>


<main>
    <div class="container">
        <div class="row indent-y-2-m">
            <div class="col-md-6">
                <nav class="second_nav">
                    <ul class="second_nav__items">
                        <li class="second_nav__item"><a href="/school/project/{{project_id}}" class="second_nav__link">Вернуться на главную страницу проекта</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-md-6">
                <nav class="second_nav">
                    <ul class="second_nav__items">
                        <li class="second_nav__item"><a href="/school/card/add/project/{{project_id}}/teacher/{{teacher_id}}" class="second_nav__link">Оценить</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="own-container">
            <div class="row">
                <div class="col-12">
                    <div class="teacher-card__title">
                        {{#if teacher}}
                            {{#each teacher}}
                                <h2 class="text-align-center header_main_blue_color">Личный профиль</h2>
                                <h3 class="text-align-center">ФИО: <span style="text-decoration:underline; text-transform:uppercase">{{surname}} {{firstname}} {{patronymic}} </span></h3>
                            {{/each}}
                        {{else}}
                            нет данных
                        {{/if}}
                    </div>
                </div>

            </div>
            {{#each singleCard}}
                <div class="row">
                    <div class="col-12">
                        <div class="wrapper-body table_section table-responsive">

                            <table class="table own-table-card">
                                <thead >

                                <tr>
                                    <td class="tg-6bug tg-center">Дата  </td>
                                    <td class="tg-bv7r " colspan="2"> {{../create_mark_date}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-6bug tg-center">ФИО,  должность субъекта оценивания урока   </td>
                                    <td class="tg-bv7r" colspan="2">{{../sourceData}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0g60 tg-center">Предмет</td>
                                    <td class="tg-w747" colspan="2">{{title_discipline}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0g60 tg-center">Класс</td>
                                    <td class="tg-w747" colspan="2">{{class_id}} {{#if liter_class}} "{{liter_class}}" {{/if}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0g60 tg-center">Тема</td>
                                    <td class="tg-w747" colspan="2">{{thema}}</td>
                                </tr>
                                <tr>
                                    <th class="tg-9wq8 own-table-align-center align-middle"><span style="font-weight:bold">Компетенции учителя</span></th>
                                    <th class="tg-9wq8 own-table-align-center align-middle">   <br><span style="font-weight:bold">Критерии оценки урока</span><br>   <br><span style="font-style:italic">(2   – требование выполнено на оптимальном уровне,    1 – есть резервы,  0 -   требование практически не выполнено)</span><br>   <br>    </th>
                                    <th class="tg-9wq8 own-table-align-center align-middle"><span style="font-weight:bold">   </span><br><span style="font-weight:bold">Оценивание в   баллах</span>   </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="own-table-align-center align-middle" rowspan="3">предметно-методическая</td>
                                    <td class="tg-0pky">1. Требования Стандартов к предметному содержанию</td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_1_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0pky"><br>2.  Развитие личностной сферы ученика средствами   предмета</td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_1_2}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0pky">3.&nbsp;&nbsp;Использование заданий, развивающих УУД на уроках предмета*</td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_1_3}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-9wq8 own-table-align-center align-middle" rowspan="2">психолого-педагогическая</td>
                                    <td class="tg-0pky">4. <span style="font-weight:400;font-style:normal">Учет и развитие мотивации и психофизиологической сферы учащихся</span></td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_2_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0pky">   <br>5.  Обеспечение целевой психолого-педагогической   поддержки обучающихся   </td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_2_2}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-9wq8 own-table-align-center align-middle">валеологическая</td>
                                    <td class="tg-0pky">   <br>6.  Требования ЗСС в содержании, структуре   урока, в работе с оборудованием и учете данных о детях с ОВЗ   </td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_3_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-9wq8 own-table-align-center align-middle">коммуникативная</td>
                                    <td class="tg-0pky">   <br>7.  Стиль и формы педагогического   взаимодействия на уроке   </td>
                                    <td class="tg-0pky own-table-align-center">{{k_4_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-9wq8 own-table-align-center align-middle" rowspan="2">управленческая</td>
                                    <td class="tg-0pky">   <br>8.  Управление организацией учебной   деятельности обучающихся через систему оценивания   </td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{k_5_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-0pky">&nbsp;&nbsp;&nbsp;<br>9.  Управление собственной обучающей&nbsp;&nbsp;&nbsp;деятельностью&nbsp;&nbsp;&nbsp;</td>
                                    <td class="tg-0pky own-table-align-center align-middle ">{{k_5_2}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-c3ow own-table-align-center align-middle" colspan="2" ><br>10.Результативность урока      &nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td class="tg-0pky own-table-align-center align-middle ">{{k_6_1}}</td>
                                </tr>
                                <tr>
                                    <td class="tg-c3ow own-table-align-center align-middle" colspan="2"><span style="font-weight:bold">Сумма баллов</span></td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{../commonValue}}</td>
                                </tr>
                                <tr class=" final-tr  {{../levelStyle}}">
                                    <td class="tg-c3ow own-table-align-center" colspan="2">КАЧЕСТВО УРОКА<br><span style="font-weight:bold;font-style:italic">100-85% - оптимальный уровень,  84-60% - допустимый уровень,</span><br><span style="font-weight:bold;font-style:italic">59-50% -  критический уровень, менее 50 % - недопустимый уровень</span><span style="font-weight:bold"> </span></td>
                                    <td class="tg-0pky own-table-align-center align-middle">{{../interest}} <br> {{../level}}</td>
                                </tr>
                                </tbody>

                            </table>
                        </div>
                        <br>
                        <div class="lesson_info">
                            <p class="lesson_info__name"><span>ФИО проверяющего: </span></p>
                            <p class="lesson_info__position"><span>Должность проверяющего: </span></p>
                            <p class="lesson_info__date"><span>Подпись: </span></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-12 col-lg-6">
                        <div class="list_action">
                            <div class="list_action__child excel-btn">
                                <form method="POST" class="secondary_form">
                                    <input type="hidden" name="excel_tbl" value="{{@root.csrf}}" id="excel_tbl">
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}" id="token">
                                    <div class="d-grid gap-2">
                                        <button type="button" class="card-btn btn btn-block btn-main-block " onClick="window.print()">Подготовить для печати </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="list_action">
                            <div class="list_action__child email-btn">
                                <div class="d-grid gap-2">
                                    <a  class="card-btn" href="/school/card/api/send/{{../teacher_id}}/{{id_card}}">Отправить на электронный адрес учителя</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="list_action">
                            <div class="list_action__child method-btn">
                                <form method="POST"  class="secondary_form">
                                    <input type="hidden" name="method_rec" value="{{@root.csrf}}" id="excel_tbl">
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}" id="token">
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="card-btn">Скачать методические рекомендации</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 ">
                        <div class="list_action">
                            <div class="list_action__child diagramma-btn">
                                <form method="POST" action=""  class="secondary_form">
                                    <input type="hidden" name="delete_teacher_school" value="{{school_id}}" >
                                    <input type="hidden" name="delete_teacher_id" value="{{teacher_id}}" >
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}" id="token">
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="card-btn"> <span style="color:tomato">  Удалить текущую оценку (анализ)</span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            {{/each}}
        </div>
    </div>
</main>


<div class="black"></div>

<script>
    $('tr[data-href]').on("click", function() {
         document.location = $(this).data('href');
    }); 
</script>


